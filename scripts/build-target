#!/bin/bash
set -ex

ros="$1"

source $(dirname $0)/version

cd $(dirname $0)/..

if [ "${!TOOLCHAIN}" != "" ]; then
  export CC=/usr/bin/${!TOOLCHAIN}-gcc
  export CGO_ENABLED=1
fi

OUTPUT=${OUTPUT:-bin/ros}
echo Building $OUTPUT
BUILDDATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')

CONST="-X github.com/maxive/os/config.Version=${VERSION} -X github.com/maxive/os/config.OsRepo=${OS_REPO} -X github.com/maxive/os/config.BuildDate='${BUILDDATE}'"
go build -ldflags "$CONST -extldflags -static -s -w" -o ${OUTPUT}
